{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "bin",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "inlineSources": true,
    "sourceRoot": "./src",
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "rootDir": "./src/",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "compileOnSave": true,
  "include": [
    "./src"
  ]
}
