{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "yarn build && firebase emulators:start --import=./data --export-on-exit",
    "shell": "yarn build:watch && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "yarn sentry:sourcemaps && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "sentry:inject": "sentry-cli sourcemaps inject ./bin",
    "sentry:upload": "sentry-cli sourcemaps upload ./bin",
    "sentry:sourcemaps": "yarn sentry:inject && yarn sentry:upload"
  },
  "engines": {
    "node": "18"
  },
  "main": "bin/src/index.js",
  "dependencies": {
    "@google-cloud/tasks": "^3.1.0",
    "@sentry/node": "^7.59.3",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.4.1",
    "openai": "^3.2.1",
    "tslib": "^2.6.0"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.0",
    "eslint": "^8.34.0",
    "prettier": "^2.8.4",
    "typescript": "^4.6.4"
  },
  "private": true
}
