{
  "name": "friends-fm",
  "private": true,
  "version": "0.3.1",
  "scripts": {
    "dev": "vite dev",
    "dev:cap": "vite dev --host",
    "build": "vite build",
    "build:cap": "vite build && npx cap sync",
    "build:release": "RELEASE=true vite build",
    "release": "yarn build:release && npx cap sync",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "generate-assets": "npx @capacitor/assets generate --iconBackgroundColor '#1F2937' --iconBackgroundColorDark '#1F2937' --splashBackgroundColor '#1F2937' --splashBackgroundColorDark '#1F2937' --assetPath 'resources/assets' --logoSplashScale '0.65' --ios --android"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/google.maps": "^3.55.7",
    "@types/node": "^22.6.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
    "@capacitor-firebase/analytics": "^6.1.0",
    "@capacitor-firebase/authentication": "^6.1.0",
    "@capacitor-firebase/firestore": "^6.1.0",
    "@capacitor-firebase/messaging": "^6.1.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/clipboard": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/device": "^6.0.0",
    "@capacitor/dialog": "^6.0.0",
    "@capacitor/geolocation": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/preferences": "^6.0.0",
    "@capacitor/share": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@googlemaps/markerclusterer": "^2.5.3",
    "@ionic/core": "^8.0.0",
    "@sentry/capacitor": "^1.0.0",
    "@sentry/sveltekit": "8.27.0",
    "capacitor-native-settings": "^6.0.0",
    "capacitor-plugin-safe-area": "^3.0.1",
    "firebase": "^10.11.0",
    "ky": "^1.2.4"
  }
}
